 <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header" data-background-color="green">
                                    <h4 class="title">Clock in's</h4>
                                    <p class="category">Team Leader Or Admin clock in employee</p>
                                </div>
                                <div class="card-content">
                                    <%= form_for( @clock_in) do |f| %>
                                        <div class="row">
                                            <div class="col-md-5">
                                                <input type=text class=qrcode-text>
                                               <label class=qrcode-text-btn>
                                                   
                                                  <input type=file
                                                         accept="image/*"
                                                         capture=environment
                                                         onclick="return showQRIntro();"
                                                         onchange="openQRCamera(this);"
                                                         tabindex=-1
                                                         name="clockin[user_id]">
                                                </label>
                                            </div>
                                           
                                            
                                        
                                        <%= f.submit "Clock In" , class: "btn btn-primary pull-right"%>
                                       
                                        <div class="clearfix"></div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
