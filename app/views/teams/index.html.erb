<div class="row">
        
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="orange">
                <h4 class="title">Teams </h4> 
                <p class="category">All your companies employees</p>
            </div>
            <div class="card-content table-responsive">
                <table class="table table-hover">
                    <thead class="text-warning">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th></th>
                        <ht></ht>
                    </thead>
                    <tbody>
                        <%  @department_teams.each do |team| %>
                        <tr>
                            <td><%= team.id %></td>
                            <td><%= team.name %></td>
                            <td><%= team.description %></td>
                            <td><%= link_to "Add Team Members" , new_department_team_team_member_path(@department.id , team.id) , class: "btn btn-primary btn-round" %></td>
                            <td><%= link_to "View Team Members" , department_team_path(@department.id , team.id) , class: "btn btn-primary btn-round" %></td>
                            
                        </tr>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

