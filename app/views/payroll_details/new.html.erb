<div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header" data-background-color="green">
                                    <h4 class="title">Employees Payroll Profile</h4>
                                    <p class="category">Complete employees payroll details</p>
                                </div>
                                <div class="card-content">
                                    <%= form_for [ @user , @payroll_detail] do |f| %>
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Employees Work Week Start</label>
                                                    <%= f.text_field(:employees_work_week_start  , class: "form-control") %>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Work Week Hours</label>
                                                   <%= f.text_field(:work_week_hours  , class: "form-control")  %>
                                                </div>
                                            </div>
                                           
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Regular Hourly Pay Rate</label>
                                                     <%= f.text_field(:regular_hourly_payrate  , class: "form-control")  %>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Daily Straight Time</label>
                                                   <%= f.text_field(:daily_or_weekly_straight_time  , class: "form-control")  %>
                                                </div>
                                            </div>
                                        </div>
                                       
                                        <%= f.submit "Save Changes" , class: "btn btn-primary pull-right"%>
                                       
                                        <div class="clearfix"></div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>