  <div class="row">

    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="orange">
                <h4 class="title">Team Members</h4> 
                <p class="category">All your team members</p>
            </div>
            <div class="card-content table-responsive">
                <table class="table table-hover">
                    <thead class="text-warning">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th></th>
                    </thead>
                    <tbody>
                        <%  @employees.each do |employee| %>
                        <tr>
                            <td><%= employee.id %></td>
                            <td><%= employee.user.name %></td>
                            <td><%= employee.user.email %></td>
                            <td><%= link_to "Place  as team leader" , department_team_team_leaders_path(:team_id => @team.id , :team_member_id => employee.user.id),method: :post, class: "btn btn-primary btn-round" %></td>
                        </tr>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
             <a href="/users" class="btn btn-primary btn-round ">New Employee</a>
             <a href="/teams/<%= @team.id%>" class="btn btn-primary btn-round ">Proceed</a>

        </div>
    </div>
                                                                                                                  